<div class="event-show">
  <div class="well col-md-10 padded">
    <h1><%= @venue.name %></h1>
    <%= image_tag(@venue.image_path, alt: "#{@venue.name} pic", class: 'venue-image') %>
    <div>
      <p>
        <strong>Location:</strong> <%= @venue.location %>
      </p>
      <p>
        <strong>Capacity:</strong> <%= @venue.capacity %>
      </p>
      <% if this_venues_admin? %>
        <p>
          <%= link_to 'Add Event', new_admin_event_path, class: 'btn btn-default' %>
        </p>
      <% end %>
    </div>
    <div class="table-responsive col-md-8 fit-width">
      <table class="table">
        <thead>
          <tr>
            <th>Event Name</th>
            <th>Category</th>
            <th>Date</th>
            <th>Price</th>
            <th class='text-center'>Purchase</th>
            <% if this_venues_admin? %>
              <th class='text-center'>Edit</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @venue.events.each do |event| %>
            <tr id="event-<%= event.id %>">
              <td><%= event.title %></td>
              <td><%= event.category.title %></td>
              <td><%= event.event_date %></td>
              <td><%= number_to_currency(event.price) %></td>
              <td>
                <%= button_to "Add to Cart", cart_events_path(event_id: event.id), class: "btn btn-sm btn-primary" %>
              </td>
              <% if this_venues_admin? %>
                <td>
                  <%= link_to 'Manage Event', edit_admin_event_path(event), class: 'btn btn-default btn-sm' %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
