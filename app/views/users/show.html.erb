<div class="page-content">
  <h1>Profile for <%= current_user.username %></h1>
  <div class="well table-responsive col-md-6">
    <table class="table">
      <tr>
        <th>E-mail</th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th>Date Registered</th>
        <td><%= current_user.date_registered %></td>
      </tr>
      <tr>
        <th>Orders Placed</th>
        <td><%= current_user.orders.count %></td>
      </tr>
    </table>
  </div>
  <div class='col-md-12'>
    <%= link_to 'View My Orders', orders_path, class: 'col-md-2 col-md-offset-4 btn btn-default' %>
  </div>
</div>
