<div class="navbar navbar-nav navbar-fixed-left">
  <span class="navbar-brand"></span>
  <ul class="nav navbar-nav">
    <li>
      <%= link_to root_path do %>
        <i class="fa fa-home"></i> Home
      <% end %>
    </li>
    <li>
      <%= link_to items_path do %>
        <i class="fa fa-align-justify"></i> All Items
      <% end %>
    </li>
    <li>
      <a class="" href="#" data-toggle="collapse" data-target="#categories">
      <i class="fa fa-toggle-down"></i> Categories</a>
      <div id="categories" class="collapse">
        <% categories.each do |category| %>
        <div class="category">
          <p>
            <%= link_to category.title, category_path(category), class:"category" %>
          </p>
        </div>
        <% end %>
      </div>
    </li>
    <li>
      <%= link_to unavailable_items_path do %>
        <i class="fa fa-trophy"></i> Best Of
      <% end %>
    </li>
    <li>
      <%= link_to root_path do %>
        <i class="fa fa-envelope"></i> Email Us
      <% end %>
    </li>
  </ul>
</div>
<div class="navbar navbar-default navbar-fixed-top">
  <div class="navbar-brand">
    <%= link_to image_tag('logo-big.png', class: 'logo'), root_path %>
  </div>
    <% if current_user %>
    <div class='navbar-header user-info'>
      <%= link_to "Logged in as #{current_user.username}", dashboard_path %>
    </div>
    <% end %>
  <ul class="nav navbar-nav navbar-right">
    <li>
      <%= link_to cart_index_path do %>
      <i class="fa fa-shopping-cart"></i> Cart: <%= @cart.total_items %>
      <% end %>
    </li>
    <% if current_user %>
      <li>
        <%= link_to logout_path, method: :delete do %>
        <i class="fa fa-sign-out"></i> Logout
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to login_path do %>
        <i class="fa fa-sign-in"></i> Login
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
